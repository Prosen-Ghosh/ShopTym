
@{
    ViewBag.Title = "User Home";
    Layout = "~/Views/Shared/_UsersLayout.cshtml";
}


<div class="container" style="margin-top:70px;">

    @for (int i = 1; i < ViewBag.Products.Count; i++)
    {
        if (i % 3 == 0)
        {
            @:<div class="row">
        }
        <a href="@Url.Action("Item","Discover",new { id = ViewBag.Products[i-1].ProductId })">
            <div class="col-md-4 card">
                <img src="~/Image/@ViewBag.Products[i-1].ProductImage" class="card-img-top" height="250" width="250" />
                <div class="card-block">
                    <h4 class="card-title">Name: @ViewBag.Products[i - 1].ProductName</h4>
                    <h5 class="card-text">Price:<strong> &#2547</strong> @ViewBag.Products[i - 1].ProductPrice/=</h5>
                </div>
            </div>
        </a>
        if (i % 3 == 0)
        {
            @:</div>
            @:<hr />
        }
    }
</div>

