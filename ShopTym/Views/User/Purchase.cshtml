@model IEnumerable<ShopTym.Models.CustomerPurchase>

@{
    ViewBag.Title = "Purchase";
    Layout = "~/Views/Shared/_UsersLayout.cshtml";
}

<div class="text-center" style="margin-top:60px;">
    <h2>Purchase</h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-10">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductQuentity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PurchaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductQuentity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PurchaseDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <!--<td>
                            @Html.ActionLink("Delete", "Delete_P", new { id = item.PurchaseId },new { @class = "btn btn-danger"})
                        </td>-->
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

