@model ShopTym.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="text-center" style="margin-top:60px;">
    <h2>Details</h2>
    <h4>Product</h4>
</div>
<hr />
<div>
    
    <dl class="dl-horizontal">
        <dt>
            <label>Product Image</label>
        </dt>

        <dd>
            <img src="~/Image/@Model.ProductImage" height="400" width="400">
        </dd>

        <dt>
            <label>Product Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            <label>Product Price</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>

        <dt>
            <label>Product Quentity</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductQuentity)
        </dd>

        <dt>
            <label>Description</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <label>Features</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Features)
        </dd>

        <dt>
            <label>Category Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }, new { @class = "btn btn-warning"}) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ProductId }, new { @class = "btn btn-danger" })
</p>
