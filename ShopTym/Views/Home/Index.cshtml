
@{
    ViewBag.Title = "ShopTym";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">ShopTym</a>
        </div>
        <div class="navbar-collapse collapse" id="searchbar">
            <ul class="nav navbar-nav navbar-right">
                @if (!User.Identity.IsAuthenticated)
                {
                <li><a href="~/Registration"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>

                <li><a href="~/Login/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                }
                else
                {
                    <li><a href="~/Login/Logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                }
            </ul>

            <form action="~/Discover/Search" method="POST" class="navbar-form">
                <div class="form-group" style="display:inline;">
                    <div class="input-group" style="display:table;">
                        <input type="text" class="form-control" name="search" placeholder="What do you want to buy?">
                        <span class="input-group-addon" style="width:1%;"><span class="glyphicon glyphicon-search"></span></span>
                    </div>
                </div>
            </form>

        </div><!--/.nav-collapse -->
    </div>
</div>

<div class="container" style="margin-top:70px;">

    @for (int i = 1; i < ViewBag.Products.Count; i++)
    {
        if (i % 3 == 0)
        {
            @:<div class="row">
        }
        <a href="@Url.Action("Item","Discover",new { id = ViewBag.Products[i-1].ProductId })">
            <div class="col-md-4 card">
                <img src="~/Image/@ViewBag.Products[i-1].ProductImage" class="card-img-top" height="250" width="250"/>
                <div class="card-block">
                    <h4 class="card-title">Name: @ViewBag.Products[i - 1].ProductName</h4>
                    <h5 class="card-text">Price:<strong> &#2547</strong> @ViewBag.Products[i - 1].ProductPrice/=</h5>
                </div>
            </div>
        </a>
        if (i % 3 == 0)
        {
            @:</div>
            @:<hr />
        }
    }
</div>